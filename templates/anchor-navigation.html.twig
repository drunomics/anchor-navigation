<section class="anchor-navigation anchor-navigation--fixed">
    <div class="anchor-navigation__toc">
        <div class="anchor-navigation__trigger">
          <div class="anchor-navigation__label">
            {% trans %}Table of contents{% endtrans %}
          </div>
          <span class="anchor-navigation__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/></svg>
          </span>
        </div>
        <div class="anchor-navigation__menu anchor-navigation__menu--list">
          <header>
            <div class="title">{{toc_title}}</div>
            {% if toc_subtitle %}
              <div class="subtitle">{{toc_subtitle}}</div>
            {% endif %}
          </header>
          <ul>
            {%- for toc_element in toc_elements -%}
              <li>
                <a class="toc_link" href="{{- toc_element.link -}}">{{- toc_element.title -}}</a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
    </div>

    {%- if social_icons is not empty -%}
    <div class="anchor-navigation__social-icons">
      <div class="anchor-navigation__trigger">
        <span class="anchor-navigation__icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/></svg>
        </span>
      </div>
      <div class="anchor-navigation__menu anchor-navigation__menu--bar">
          {{ social_icons }}
      </div>
    </div>
    {%- endif -%}

    <div class="anchor-navigation__scroll-top">
      <div class="anchor-navigation__trigger">
        <span class="anchor-navigation__icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"/></svg>
        </span>
      </div>
    </div>
</section>
